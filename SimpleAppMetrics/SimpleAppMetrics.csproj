<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>SimpleAppMetrics</AssemblyName>
        <RootNamespace>SimpleAppMetrics</RootNamespace>
        <TargetFrameworks>net8.0;net10.0</TargetFrameworks>
        <PackageReadmeFile>Readme.md</PackageReadmeFile>
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.2" />
      <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="10.0.2" />
      <PackageReference Include="OpenTelemetry" Version="1.15.0" />
    </ItemGroup>
    <ItemGroup>
      <Content Include="..\Readme.md" Pack="true" PackagePath="\">
        <Link>Readme.md</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
</Project>
